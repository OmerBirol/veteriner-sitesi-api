@model VetRandevu.Api.Models.Clinic
@{
    ViewData["Title"] = "Klinik Düzenle";
    var admins = ViewBag.ClinicAdmins as List<VetRandevu.Api.Models.ApplicationUser>;
}

<div class="card">
    <div class="card-body">
        <h5 class="mb-3">Klinik Düzenle</h5>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Ad</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Şehir</label>
                <input asp-for="City" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Adres</label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Telefon</label>
                <input asp-for="Phone" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Görsel URL</label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Klinik Sahibi (ClinicAdmin)</label>
                <select class="form-select" asp-for="OwnerUserId">
                    <option value="">Seçiniz</option>
                    @if (admins != null)
                    {
                        foreach (var admin in admins)
                        {
                            <option value="@admin.Id">@admin.Email</option>
                        }
                    }
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Latitude</label>
                <input asp-for="Latitude" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Longitude</label>
                <input asp-for="Longitude" class="form-control" />
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="IsApproved" />
                <label class="form-check-label">Onaylı</label>
            </div>
            <button class="btn btn-primary">Güncelle</button>
            <a class="btn btn-secondary" href="/admin/clinics">İptal</a>
        </form>
    </div>
</div>
